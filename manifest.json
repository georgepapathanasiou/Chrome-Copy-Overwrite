{
  "manifest_version": 3,
  "name": "Copy to clipboard",
  "version": "1.4",
  "description": "Copy highlighted text to clipboard directly.",
  "icons": {
    "48": "cow.png"
  },
  "author": "George Papathanasiou, Aris Neos",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "copy_to_clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+E ",
        "mac": "Command+Shift+E "
      },
      "description": "Copy highlighted text to clipboard directly."
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "default_popup": "popup.html"
}
